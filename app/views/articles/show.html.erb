<%= link_to "<- Listado de Articulos", articles_path %>

<section>
  <h1><%= @article.title %></h1>
  <p><%= @article.body %></p>

  <ul>
    <li><%= link_to "Editar", edit_article_path(@article) %></li>
    <li><%= link_to "Eliminar", article_path(@article), data: {
      turbo_method: :delete,
      turbo_confirm: "¿Estás seguro?"
    } %></li>
  </ul>
</section>


<%= render "comments/list", article: @article %>
<div class="notice">
  <%= render "comments/form", article: @article %>
</div>

